    libs          (sampling);
    surfaceFormat vtk;
    fields        ( cellError expectedCellError sasRefineIndicator );
    timeStart     1.0;
    timeEnd       2.0;
    writeControl  timeStep;
    writeInterval 4;

    surfaces
    {
        zNormal
        {
            type    cuttingPlane;
            point   (0 0 0.04);
            normal  (0 0 1);
        }
    }
}



