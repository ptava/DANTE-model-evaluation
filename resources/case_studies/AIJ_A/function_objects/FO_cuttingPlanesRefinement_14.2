// Note: sasRefineIndicator and the other fields are shifted by 1 time step
refinementY
{
    type          surfaces;
    libs          (sampling);
    surfaceFormat vtk;
    fields        ( cellError expectedCellError sasRefineIndicator );
    timeStart     1.0;
    timeEnd       2.0;
    writeControl  timeStep;
    writeInterval 4;

    surfaces
    {
        yNormal
        {
            type    cuttingPlane;
            point   (0 0 0);
            normal  (0 1 0);
        }
    }
}

// Note: sasRefineIndicator and the other fields are shifted by 1 time step
refinementZ
{
