sasRefineIndicatorMin
{
    libs            (fieldFunctionObjects);
    type            volFieldValue;
    enabled         true;
    operation       min;
    fields          (sasRefineIndicator);
    executeControl  timeStep;
    executeInterval 4;
    writeFields     false;
}
sasRefineIndicatorMax
{
    libs            (fieldFunctionObjects);
    type            volFieldValue;
    enabled         true;
    operation       max;
    fields          (sasRefineIndicator);
    executeControl  timeStep;
    executeInterval 4;
    writeFields     false;
}
