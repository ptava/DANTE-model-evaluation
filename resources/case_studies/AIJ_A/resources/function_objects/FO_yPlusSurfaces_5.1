yPlus1
{
    type			surfaces;
    enabled	        	yes;
    libs			("libsampling.so");
    surfaceFormat		vtp;
    fields			(yPlus);
    interpolationScheme		none;
    timeStart       		2.0;
    timeEnd         		3.0;
    writeControl    		runTime;
    writeInterval   		0.05;

    surfaces
    (
        ground
        {
            type                patch;
            interpolate         false;
            patches             (ground);
        }
        front
        {
            type                patch;
            interpolate         false;
            patches             (front);
        }
        sides
        {
            type                patch;
            interpolate         false;
            patches             (side1 side2);
        }
        roof
        {
            type                patch;
            interpolate         false;
            patches             (roof);
        }
        back
        {
            type                patch;
            interpolate         false;
            patches             (back);
        }
    );
}
 
