// Check yPlus value on ground wall
groundyPlus
{
    type            surfaceFieldValue;
    libs            ("libfieldFunctionObjects.so");
    fields          (yPlus);
    writeFields     false;
    log             false;
    surfaceFormat   none;
    regionType      patch;
    name            ground;
    operation       max;
    timeStart       2.0; 
    timeEnd         3.0; 
    writeControl    runTime; 
    writeInterval   0.05;
}

// Check yPlus value on building walls
buildingyPlus
{
    type            surfaceFieldValue;
    libs            ("libfieldFunctionObjects.so");
    fields          (yPlus);
    writeFields     false;
    log             false;
    surfaceFormat   none;
    regionType      patch;
    name            building;
    operation       max;
    timeStart       2.0; 
    timeEnd         3.0; 
    writeControl    runTime; 
    writeInterval   0.05;
}

