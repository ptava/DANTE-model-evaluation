// Note: function object originally used to access 'cellError',
// 'expectedCellError', and 'sasRefineIndicator'. The latter is shifted by 1 
// with respect the previous two time step
refinementY1
{
    type          surfaces;
    libs          (sampling);
    surfaceFormat vtk;
    fields        ( sasRefineIndicator );
    timeStart     1.0;
    timeEnd       2.0;
    writeControl  runTime;
    writeInterval 0.05;
    enabled       true;

    surfaces
    {
        yNormal
        {
            type    cuttingPlane;
            point   (0 0 0);
            normal  (0 1 0);
        }
    }
}

refinementZ1
{
    type          surfaces;
    libs          (sampling);
    surfaceFormat vtk;
    fields        ( sasRefineIndicator );
    timeStart     1.0;
    timeEnd       2.0;
    writeControl  runTime;
    writeInterval 0.05;
    enabled       true;

    surfaces
    {
        zNormal
        {
            type    cuttingPlane;
            point   (0 0 0.04);
            normal  (0 0 1);
        }
    }
}



