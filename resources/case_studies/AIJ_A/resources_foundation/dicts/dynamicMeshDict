FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      dynamicMeshDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

topoChanger
{
    type               myrefiner;

    cellZone           refine_cells;

    refineInterval     4;

    maxRefinement      2;

    maxCells           700000;

    field              sasRefineIndicator;

    unrefineLevel      0;
    
    lowerRefineLevel   0;

    nBufferLayers      1;

    dumpLevel          true;

    dumpRefinementInfo true;

    correctFluxes      (
        ( phi none )
        ( phi_0 none )
        ( phi_0_0 none )
        ( ddt0(phi) none )
    );

    refineScale
    {
        type           table;
        outOfBounds    clamp;
        values         ((0.1 0.0) (0.6 0.1) (1.0 0.5) (2.0 1.0));
    }

}

distributor
{
    type                   distributor;

    maxImbalance           0.1;

    redistributionInterval 100;

    constraints
    {
       refinementHistory
       {
           type    refinementHistory;
       }
    }
}

