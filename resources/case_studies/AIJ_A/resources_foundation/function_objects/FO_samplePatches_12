sampledPatches
{
    type                surfaces;
    enabled             yes;
    libs                ("libsampling.so");
    interpolationScheme cell;
    surfaceFormat       vtk;
    fields              (wallShearStress wallShearStreesMean yPlus);
    region              region0;
    enabled             true;
    executeAtStart      true;
    startTime           $../controlDict!foLfStart;
    endTime             $../controlDict!foLfEnd;
    executeControl      runTime;
    executeInterval     $../controlDict!foLfDeltaT;
    writeControl        runTime;
    writeInterval       $../controlDict!foLfDeltaT;
    patches
    (
        roof
        side1
        side2
        front
        back
        ground
    );
}

