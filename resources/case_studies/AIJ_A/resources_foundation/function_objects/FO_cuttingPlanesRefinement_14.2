refinementY1
{
    type                surfaces;
    libs                ("libsampling.so");
    surfaceFormat       vtk;
    fields              ( sasRefineIndicator );
    startTime           1.0;
    endTime             2.0;
    writeControl        runTime;
    executeAtStart      false;
    writeInterval       0.05;
    interpolationScheme none;

    surfaces
    (
        yNormal
        {
            type        cuttingPlane;
            planeType   pointAndNormal;
            point       (0 0 0);
            normal      (0 1 0);
            interpolate false;
        }
    );
}

refinementZ1
{
