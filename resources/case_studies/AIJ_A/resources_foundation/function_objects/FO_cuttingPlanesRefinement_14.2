    surfaceFormat      vtk;
    fields             ( sasRefineIndicator );
    startTime          1.0;
    endTime            2.0;
    writeControl       runTime;
    writeInterval      0.05;
    interpolationScheme none;

    surfaces
    (
        zNormal
        {
            type        cuttingPlane;
            planeType   pointAndNormal;
            point       (0 0 0.04);
            normal      (0 0 1);
            interpolate false;
        }
    );
}



