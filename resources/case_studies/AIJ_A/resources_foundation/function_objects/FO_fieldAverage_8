fieldAverage
{
    type             fieldAverage;
    libs             ("libfieldFunctionObjects.so");
    restartOnRestart false;
    restartOnOutput  false;
    periodicRestart  false;
    region           region0;
    enabled          true;
    log              true;
    startTime        1.3;
    endTime          2.0;
    executeControl   timeStep;
    writeControl     writeTime;
    executeAtStart   false;

    fields
    (
        p
        {
            mean         on;
            prime2Mean   on;
            base         time;
        }
        U
        {
            mean         on;
            prime2Mean   on;
            base         time;
        }
        k
        {
            mean         on;
            prime2Mean   on;
            base         time;
        }
        wallShearStress
        {
            mean         on;
            prime2Mean   on;
            base         time;
        }
    );

}


