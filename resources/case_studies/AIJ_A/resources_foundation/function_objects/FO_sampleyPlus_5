// Check yPlus value on ground wall
groundyPlus
{
    type           surfaceFieldValue;
    libs           ("libfieldFunctionObjects.so");
    fields         (yPlus);
    writeFields    false;
    log            false;
    select         patch;
    patch          ground;
    operation      max;
    startTime      $../controlDict!foLfStart;
    endTime        $../controlDict!foLfEnd;
    writeControl   runTime;
    writeInterval  $../controlDict!foLfDeltaT;
    executeAtStart false;
}

// Check yPlus value on building walls
buildingyPlus
{
    type           surfaceFieldValue;
    libs           ("libfieldFunctionObjects.so");
    fields         (yPlus);
    writeFields    false;
    log            false;
    select         patch;
    patch          building;
    operation      max;
    startTime      $../controlDict!foLfStart;
    endTime        $../controlDict!foLfEnd;
    writeControl   runTime;
    writeInterval  $../controlDict!foLfDeltaT;
    executeAtStart false;
}

