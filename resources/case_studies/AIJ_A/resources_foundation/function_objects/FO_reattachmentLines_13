-------------------------------------------------------------------------------
Description
    Sample wall shear stress on ground and roof to compare reattachment point
\*---------------------------------------------------------------------------*/

reattachment
{
	type                sets;
	enabled		        yes;
	libs                ("libsampling.so");
	writeControl        writeTime;
    executeAtStart      false;
	fields		        (wallShearStressMean);
	interpolationScheme cellPoint;
	setFormat           raw;
	sets
    (
        ground
        {
            type    lineUniform;
            axis    x;
            nPoints 180;
            start   (0.04 0 0);
            end     (0.85 0 0);
        }
        roof
        {
            type    lineUniform;
            axis    x;
            nPoints 100;
            start	( -0.039 0 0.16);
            end     ( 0.04 0 0.16);
        }
    );
}

