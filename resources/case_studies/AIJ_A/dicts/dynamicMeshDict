FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      dynamicMeshDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dynamicFvMesh       mydynamicRefineFvMesh;

mydynamicRefineFvMeshCoeffs
{
    refineInterval     4;

    maxRefinement      2;

    maxCells           700000;

    field              sasRefineIndicator;

    unrefineLevel      0;
    
    lowerRefineLevel   0;

    nBufferLayers      1;

    dumpLevel          true;

    dumpRefinementInfo true;

    correctFluxes (	
        ( phi U )
        ( phi_0 U_0 )
        ( phi_0_0 U_0_0 )
        ( ddt0(phi) ddt0(U) )
    );

    refineScale
    {
        type        table;
        outOfBounds clamp;
        values      ((0 0.2) (0.5 0.6) (1.0 1.0));
    }

}

