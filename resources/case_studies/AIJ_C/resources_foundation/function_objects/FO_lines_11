			type               lineUniform;
			axis               y;
			start              (0.2 -0.5 0.02);
			end                (0.2 0.5 0.02);
			nPoints            500;
		}
		line_0.25_0.02
		{
			type               lineUniform;
			axis               y;
			start              (0.25 -0.5 0.02);
