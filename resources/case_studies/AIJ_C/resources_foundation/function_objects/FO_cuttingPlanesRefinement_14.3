refinementY
{
    type                surfaces;
    libs                ("libsampling.so");
    surfaceFormat       vtk;
    fields              ( sasRefineIndicator );
    startTime           $../controlDict!foHfStart;
    endTime             $../controlDict!foHfEnd;
    writeControl        runTime;
    executeAtStart      false;
    writeInterval       $../controlDict!foHfDeltaT;
    enabled             false;
    interpolationScheme none;

    surfaces
    (
        yNormal
        {
            type        cuttingPlane;
            planeType   pointAndNormal;
            point       (0 0 0);
            normal      (0 1 0);
            interpolate false;
        }
    );
}

refinementZ
{
    type                surfaces;
    libs                ("libsampling.so");
    surfaceFormat       vtk;
    fields              ( sasRefineIndicator );
    startTime           "${foHfStart}";
    endTime             "${foHfEnd}";
    writeControl        runTime;
    executeAtStart      false;
    writeInterval       "${foHfDeltaT}";
    enabled             false;
    interpolationScheme none;

    surfaces
    (
        zNormal
        {
            type        cuttingPlane;
            planeType   pointAndNormal;
            point       (0 0 0.04);
            normal      (0 0 1);
            interpolate false;
        }
    );
}



