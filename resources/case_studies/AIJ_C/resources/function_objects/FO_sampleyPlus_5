// Check yPlus value on ground wall
groundyPlus
{
    type            surfaceFieldValue;
    libs            ("libfieldFunctionObjects.so");
    fields          (yPlus);
    writeFields     false;
    log             false;
    surfaceFormat   none;
    regionType      patch;
    name            ground;
    operation       max;
    writeControl    timeStep;
    writeInterval   10;
}

